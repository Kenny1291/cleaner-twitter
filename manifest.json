{
  "manifest_version": 3,
  "name": "Cleaner Twitter",
  "description": "Make Twitter UI cleaner by removing annoying pieces.",
  "version": "0.1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/hi.png"
  },
  "content_scripts": [
    {
        "js": ["content.js"],
        "css": ["content.css"],
        "matches": [
            "https://*.twitter.com/*"
        ],
        "run_at": "document_end"    
    }
  ],
  "permissions": [
    "storage",
    "tabs"
  ],
  "background": {
    "service_worker": "background.js", "type": "module"
  },
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["data.js"]
  }]
}