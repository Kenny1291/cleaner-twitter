{
  "manifest_version": 3,
  "name": "Cleaner Twitter",
  "description": "Make Twitter UI cleaner by removing annoying pieces.",
  "version": "1.0",
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": "images/hi.png"
  },
  "content_scripts": [
    {
        "js": ["content.js"],
        "css": ["content.css"],
        "matches": [
            "https://*.twitter.com/*"
        ],
        "run_at": "document_end"    
    }
  ],
  "permission": [
    "storage"
  ]
}